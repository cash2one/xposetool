<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.meiriq.xposehook.RecordAppFileActivity"
    tools:showIn="@layout/activity_record_app_file">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_appinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accb_appchoose"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/til_appinfo"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/accb_appchoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_recycleview"/>

</RelativeLayout>
